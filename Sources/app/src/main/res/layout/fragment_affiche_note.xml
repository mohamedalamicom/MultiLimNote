<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context="com.mohamed_alami.multilimnote.activities.AfficheNoteActivityFragment">
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:scaleType="centerCrop"
            android:id="@+id/imageNote"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="240dp"
            android:layout_marginStart="20dp"
            android:layout_centerHorizontal="false"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:id="@+id/titleNote"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="260dp"
            android:layout_alignStart="@+id/titleNote"
            android:textSize="12dp"
            android:textColor="#FFFFFF"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3"
            android:id="@+id/infoNote"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageNote"
            android:layout_alignStart="@+id/infoNote"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:id="@+id/participantsNote"/>
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/participantsNote"
            android:layout_alignStart="@+id/participantsNote"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/contentNote"/>
</RelativeLayout>
</ScrollView>
